configuration {
      font:			   "CaskaydiaCove Nerd Font 9";
    show-icons:                     true;
    icon-theme: 	            "";
    dispalay-drun: 		    "ï€‚";
    drun-display-format:            "{name}";
    disable-history:                false;
    fullscreen:                     false;
    hide-scrollbar: 		    true;
    sidebar-mode: 		    false;
}

@import "colors.rasi"

element-icon {
 background-color: inherit;
 icon-color: inherit;
}

element-text {
 background-color: inherit;
 text-color: inherit;
}

*{
  background-color: @bg;
}

window {
    transparency:                   "false";
    background-color:               @bg;
    text-color:                     @fg1;
    border:			    10px;
    border-color:		    @bg;
    border-radius:                  7px;
    width:		            20%;
    location:                       center;
    x-offset:                       0;
    y-offset:                       0;
}

prompt {
    enabled: 						true;
	padding: 					0.3% 0.2% 0% 0%;
	
        border-color:   @bg;
        border:         1px;
        border-radius:  7px;

        background-color: 				@bg;
	text-color: 					@fg1;
	font:						"CaskaydiaCove Nerd Font 12";
}

entry {
    border: 3px;
    border-radius: 7px;
    border-color:  @bg1;

    background-color:               @bg1;
    text-color:                     @fg1;
    placeholder-color:              @bg;
    expand:                         true;
    horizontal-align:               0;
    placeholder:                    "Search";
    padding:                        0.10% 0% 0% 0%;
    blink:                          true;
}

inputbar {
    children: 						[ prompt, entry ];
    background-color:               @bg;
    text-color:                     @bg;
    expand:                         false;
    border:							0% 0% 0% 0%;
    border-radius:                  0px;
    border-color:					@bg1;
    margin:                         0% 0% 0% 0%;
    padding:                        1.5%;
}

listview {
    background-color:               @bg;
    padding:                        0px;
    columns:                        1;
    lines:                          5;
    spacing:                        0%;
    cycle:                          false;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @bg;
	border:							0% 0% 0% 0%;
    border-radius:                  0% 0% 0% 0%;
	border-color:					@ac;
    children:                       [ inputbar, listview ];
    spacing:                       	0%;
    padding:                        0%;
}

element {
    background-color:               @bg;
    text-color:                     @bg2;
    orientation:                    horizontal;
    border-radius:                  70%;
    padding:                        1% 0.5% 1% 0.5%;
}

element-icon {
    size:                           24px;
    border:                         0px;
}

element-text {
    expand:                         true;
    horizontal-align:               0;
    vertical-align:                 0.5;
    margin:                         0% 0.25% 0% 0.25%;
}

element selected {
    background-color:               @bg1;
    text-color:                     @fg1;
	border:							0% 0% 0% 0%;
    border-radius:                  10px;
    border-color:                   @bg;
}
